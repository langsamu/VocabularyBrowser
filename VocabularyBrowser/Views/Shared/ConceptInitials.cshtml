<nav class="navigation--letter">
    <ol>
        @foreach (var initial in Model.OrderBy((Func<dynamic, dynamic>)(x => x)))
        {
            @if (initial as string == ((string)ViewData["prefix"])?.ToUpper())
            {
                <li class="active">
                    <span>
                        @initial
                    </span>
                </li>
            }
            else
            {
                <li>
                    <a asp-action="StartingWith" asp-route-prefix="@initial">@initial</a>
                </li>
            }
        }
    </ol>
</nav>
